<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="@drawable/list_item_bg">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/default_artist_cover"/>

    <TextView
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white0.8"
        android:textSize="16sp"
        android:singleLine="true"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/right_arrow_img"
        android:layout_toStartOf="@+id/right_arrow_img" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/common_alpha_white"
        android:textSize="14sp"
        android:singleLine="true"
        android:id="@+id/textView4"
        android:layout_marginBottom="6dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_arrow_img"
        android:contentDescription="@null"
        android:paddingBottom="10dp"
        android:src="@drawable/right_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>