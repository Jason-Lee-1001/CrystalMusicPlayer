<com.studio.jason.application.customized_view.CheckableListItemView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/cus_item"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/list_item_bg">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white0.8"
        android:textSize="16sp"
        android:id="@+id/textView"
        android:singleLine="true"
        android:layout_alignParentLeft="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_checkBox"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:clickable="false"
        android:button="@drawable/checkbox_indicator_state_list" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/common_alpha_white"
        android:textSize="14sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:layout_alignParentStart="true" />
</com.studio.jason.application.customized_view.CheckableListItemView>