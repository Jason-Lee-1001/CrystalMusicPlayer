<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/album_item_imageView"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/default_album_cover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="medium text"
        android:textSize="13sp"
        android:id="@+id/album_item_textView1"
        android:textColor="@color/white0.8"
        android:layout_below="@+id/album_item_imageView"
        android:layout_alignLeft="@+id/album_item_imageView"
        android:layout_alignStart="@+id/album_item_imageView" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="small text"
        android:layout_marginBottom="5dp"
        android:textSize="10sp"
        android:id="@+id/album_item_textView2"
        android:textColor="@color/common_alpha_white"
        android:layout_below="@+id/album_item_textView1"
        android:layout_alignLeft="@+id/album_item_textView1"
        android:layout_alignStart="@+id/album_item_textView1" />

</RelativeLayout>